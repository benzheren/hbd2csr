#scene
  .scrollblock
    #cover
      #cover-bloc1
        h1 Happy Birthday,
      #cover-bloc2
        h1 Sylvia!
  .scrollblock
    #places
      #first-place
        #first-place-map
        #first-place-in
          p.p-text1 2008@NYC
          p.p-text2 230 5th Avenue, New York, NY
      #second-place
        #second-place-in
          p.p-text1 2009@SEOUL
          p.p-text2 Seoul
      #places-middle
        &nbps;
      #third-place
        #third-place-in
          p.p-text1 2010@JOUY-EN-JOSAS
          p.p-text2 Paris
      #fourth-place
        #fourth-place-in
          p.p-text1 2011@CHICAGO
          p.p-text2 Chicago
script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
script(src='/javascripts/jquery.scrollorama.js')
:coffeescript
  scrollorama = $.scrollorama blocks:'.scrollblock'
  scrollorama.animate '#cover-bloc1 h1',
    delay: 200,
    duration: 300,
    property:'left',
    start:0, end: -1000

  scrollorama.animate '#cover-bloc2 h1',
    delay: 0,
    duration: 600,
    property:'left',
    start:0,
    end: -1000,
    pin: true
  
  scrollorama.animate '#first-place-map',
    delay: 800,
    duration: 1000,
    property: 'opacity',
    start: 0,
    end: 0.6

  scrollorama.animate '#third-place',
    delay: 1600,
    duration: 1200,
    property: 'height',
    start: 0,
    end: 4000

  scrollorama.animate '#fourth-place',
    delay: 1600,
    duration: 1200,
    property: 'width',
    start: 0,
    end: 3000

  scrollorama.animate '#places',
    property: 'rotate',
    duration: 1000,
    start: 0,
    end: -21

  scrollorama.animate '#places',
    property: 'left',
    duration: 1000
    start: 0,
    end: -2348

  scrollorama.animate '#places',
    property: 'top',
    duration: 1000
    start: -1175,
    end: -2750
