#scene
  .scrollblock
    #cover
      #cover-bloc1
        h1 Hello World!
      #cover-bloc2
        h1 Express
  .scrollblock
    #places
      #first-place
        #first-place-map
        #first-place-in
          p.p-text1 New York City
          p.p-text2 230 5th Avenue, New York, NY
script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
script(src='/javascripts/jquery.scrollorama.js')
:coffeescript
  scrollorama = $.scrollorama blocks:'.scrollblock'
  scrollorama.animate '#cover-bloc1 h1',
    delay: 200,
    duration: 300,
    property:'left',
    start:0, end: -1000

  scrollorama.animate '#cover-bloc2 h1',
    delay: 0,
    duration: 600,
    property:'left',
    start:0,
    end: -1000,
    pin: true
  
  scrollorama.animate '#first-place-map',
    delay: 800
    duration: 1000
    property: 'opacity',
    start: 0,
    end: 0.6

  scrollorama.animate '#places',
    property: 'rotate',
    duration: 1000
    start: 0,
    end: -21

  scrollorama.animate '#places',
    property: 'left',
    duration: 1000
    start: 0,
    end: -2048

  scrollorama.animate '#places',
    property: 'top',
    duration: 1000
    start: -1175,
    end: -2703
